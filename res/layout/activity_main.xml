<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >


	    <!-- ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="90dp"
	        android:layout_height="44dp"
	        android:src="@drawable/header_dec1" /-->
        <ImageView
            android:id="@+id/imageView1"
	        android:layout_width="307dp"
	        android:layout_height="46dp"
            android:src="@drawable/title" />
	
	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="307dp"
	        android:layout_height="46dp"
	        android:src="@drawable/header_dec2" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/start_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginBottom="5dp"
        android:contentDescription="Start"
        android:scaleType="fitCenter"
        android:src="@drawable/start_btn2" />

    <ImageButton
        android:id="@+id/setting_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="#00000000"
        android:contentDescription="setting"
        android:scaleType="fitCenter"
        android:src="@drawable/setting_btn2" />

    <ImageButton
        android:id="@+id/update_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:contentDescription="update"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/update_btn2" />
  
    <TextView
        android:id="@+id/textView1"
    	style="?textBody" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/dev_names" />

    <TextView
        android:id="@+id/textView2"
    	style="?textBody" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright" />


</LinearLayout>