<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="248dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/uclbanner" />

    <ImageButton
        android:id="@+id/start_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="#00000000"
        android:layout_marginBottom="5dp"
        android:contentDescription="Start"
        android:scaleType="fitCenter"
        android:src="@drawable/start_btn" />

    <ImageButton
        android1:id="@+id/setting_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="#00000000"
        android:contentDescription="setting"
        android:scaleType="fitCenter"
        android1:src="@drawable/setting_btn" />

    <ImageButton
        android1:id="@+id/update_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:contentDescription="update"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android1:src="@drawable/update_btn" />
  
    <TextView
        android:id="@+id/textView1"
    	style="?textBody" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/dev_names" />

    <TextView
        android:id="@+id/textView2"
    	style="?textBody" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright" />


</LinearLayout>