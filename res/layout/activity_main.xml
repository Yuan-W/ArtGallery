<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#33FFFFFF"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" android:id="@+id/banner_view">


        <!-- ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:src="@drawable/header_dec1" /-->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="307dp"
            android:layout_height="46dp"
            android:alpha="0.9"
            android:src="@drawable/title2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="307dp"
            android:layout_height="46dp"
            android:src="@drawable/header_dec22" />

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true">
        <ImageButton
            android:id="@+id/start_btn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:layout_marginBottom="10dp"
            android:contentDescription="Start"
            android:scaleType="fitXY"
            android:src="@drawable/start_btn2" android:layout_centerHorizontal="true" android:layout_marginTop="10dp"
            android:baselineAlignBottom="false"/>
        <ImageButton
            android:id="@+id/setting_btn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:contentDescription="setting"
            android:scaleType="fitCenter"
            android:src="@drawable/setting_btn2" android:layout_centerHorizontal="true"
            android:layout_below="@+id/start_btn" android:layout_marginTop="10dp"/>
        <ImageButton
            android:id="@+id/update_btn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:contentDescription="update"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/update_btn2" android:layout_centerHorizontal="true"
            android:layout_below="@+id/setting_btn" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/textView1"
    	style="?textBody" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/dev_names" android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true" android:layout_above="@+id/textView2"/>

    <TextView
        android:id="@+id/textView2"
    	style="?textBody" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright" android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" android:layout_marginBottom="10dp"/>


</RelativeLayout>