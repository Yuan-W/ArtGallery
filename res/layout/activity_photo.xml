<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photoLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#BBFFFFFF"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".PhotoActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="?textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MARCIA FARQUHAR&apos;S"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="400dp"
            android:layout_height="450dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/body"
                    style="?textBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:scrollbars="vertical"
                    android:text="Description" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|top"
        android:gravity="top" >

        <ImageView
            android:id="@+id/videomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:maxHeight="600dp"
            android:maxWidth="800dp"
            android:src="@drawable/video" />

        <TextView
            android:id="@+id/remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/videomain"
            android:layout_alignLeft="@+id/videomain"
            android:layout_alignRight="@+id/videomain"
            android:background="#c0ffffff"
            android:gravity="center"
            android:padding="10dp"
            android:text="Tap to enlarge"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#393939"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/videomain"
            android:layout_below="@+id/videomain"
            android:gravity="right"
            android:text="caption"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic" />
    </RelativeLayout>

    <TextView
        android:id="@+id/realtedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/horizontalDivisor"
        android:layout_alignRight="@+id/horizonListview"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:text="Related Items"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="23sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/horizontalDivisor"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_above="@+id/horizonListview"
        android:layout_alignRight="@+id/horizonListview"
        android:layout_marginBottom="5dp"
        android:background="#4d4d4d" />

    <com.devsmart.android.ui.HorizontalListView
        android:id="@+id/horizonListview"
        android:layout_width="800dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/fontsize"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/font" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_white" />
    </LinearLayout>

</RelativeLayout>